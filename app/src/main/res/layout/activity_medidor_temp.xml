<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#0071C2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/content_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_value"
        android:textSize="25dp"
        android:layout_marginTop="28dp"
        android:layout_alignStart="@+id/termo_img"
        android:layout_below="@+id/tempActual" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperatura Actual"
        android:id="@+id/tempActual"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Â°C"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_alignTop="@+id/content_value"
        android:layout_toEndOf="@+id/content_value"
        android:layout_marginStart="29dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/termo_img"
        android:background="@drawable/termo_25"
        android:longClickable="false"
        android:maxHeight="120dp"
        android:layout_marginRight="210dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

</RelativeLayout>