<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0071C2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetearTemp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperatura Máxima"
        android:id="@+id/setearMax"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="°C"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/setearMax"
        android:layout_alignEnd="@+id/seterMin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Temperaturas"
        android:id="@+id/actualizar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editMax"
        android:text="25"
        android:textSize="30dp"
        android:longClickable="false"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperatura Mínima"
        android:id="@+id/seterMin"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/setearMax" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editMin"
        android:text="25"
        android:textSize="30dp"
        android:longClickable="false"
        android:textAlignment="center"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/seterMin"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="°C"
        android:id="@+id/textView6"
        android:textSize="40dp"
        android:layout_alignBottom="@+id/editMin"
        android:layout_alignEnd="@+id/seterMin" />

</RelativeLayout>
